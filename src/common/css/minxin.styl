border-1px($color)
    position: relative
    &:after
        display: block
        position: absolute
        left:0
        bottom:0
        width:100%
        border-top: 1px solid  $color
        content: ' '
    &:before
        display: block
        position: absolute
        left:0
        top:0
        width:100%
        border-top: 1px solid  $color
        content: ' ' 
        
bag-img($url)
    background-image:url($url+"@2x.png")
    @media (-webkit-min-device-pixel-ratio:2),(min-device-pixel-ratio:2)
        background-image:url($url+"@3x.png")
border-1px-bottom($color)
    position: relative
    &:after
        display: block
        position: absolute
        left:0
        bottom:0
        width:70%
        margin-left: 15%  
        border-top: 1px solid  $color
        content: ' '